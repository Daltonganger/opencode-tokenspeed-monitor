{
  "name": "opencode-tokenspeed-monitor",
  "version": "0.1.7",
  "type": "module",
  "description": "Monitor token speed per request with SQLite persistence and HTTP API",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "commands",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "opencode",
    "plugin",
    "tokens",
    "monitoring",
    "sqlite"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Daltonganger/opencode-tokenspeed-monitor.git"
  },
  "homepage": "https://github.com/Daltonganger/opencode-tokenspeed-monitor#readme",
  "bugs": {
    "url": "https://github.com/Daltonganger/opencode-tokenspeed-monitor/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test src/**/*.test.ts",
    "hub:start": "bun src/hub/main.ts",
    "deploy:2631us": "bash ./scripts/deploy-2631us.sh",
    "pack:check": "npm pack --dry-run",
    "release:check": "bun test src/**/*.test.ts && npm run build && npm run pack:check"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  }
}
