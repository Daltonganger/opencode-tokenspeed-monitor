TS_HUB_PORT=3476
TS_HUB_DB_PATH=/var/lib/tokenspeed-hub/hub.sqlite

# Required: use at least one of TS_HUB_SIGNING_KEY or TS_HUB_INVITE_TOKEN
TS_HUB_SIGNING_KEY=replace-with-long-random-secret
TS_HUB_INVITE_TOKEN=replace-with-invite-token

# Required for /admin UI and /v1/devices* admin endpoints
TS_HUB_ADMIN_TOKEN=replace-with-admin-token

# Optional: admin login protection tuning
TS_HUB_ADMIN_LOGIN_WINDOW_SEC=300
TS_HUB_ADMIN_LOGIN_MAX_ATTEMPTS=10
